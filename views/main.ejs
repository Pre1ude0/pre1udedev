<!doctype HTML>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta charset="utf-8">
        <title>Test</title>
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/discord.css">
        <link rel="stylesheet" href="/css/disclaimer.css">
    </head>
    <body>
        <script src="https://livejs.com/live.js"></script>
        <script src="https://kit.fontawesome.com/bd75686a6c.js" crossorigin="anonymous"></script>
        <div class="icon" data-target="test">
            <img src="/img/pfp.jpg" alt="Icon">
            <p>Test</p>
        </div>
        <div class="icon" data-target="console">
            <img src="/img/console.png" alt="Icon">
            <p>Console</p>
        </div>
        <div class="icon" data-target="discord">
            <img src="/img/discord.png" alt="Icon">
            <p>Discord</p>
        </div>
        <div class="window test">
            <div class="title-bar">
                <div class="title-bar-text">Test</div>
                <button class="close"><i class="fa-solid fa-xmark"></i></button>
            </div>
            <div class="window-body">
                <p>Test</p>
            </div>
        </div>
        <div class="window console">
            <div class="title-bar">
                <div class="title-bar-text">Console</div>
                <button class="close"><i class="fa-solid fa-xmark"></i></button>
            </div>
            <div class="window-body">
            </div>
        </div>
        <div class="window discord" style="height: 500px">
            <div class="title-bar">
                <div class="title-bar-text">Discord</div>
                <button class="close"><i class="fa-solid fa-xmark"></i></button>
            </div>
            <div class="window-body">
                <div class="discord"></div>
            </div>
        </div>

        <div class="disclaimer-container">
            <div class="disclaimer">IN ALPHA</div>
            <div class="disclaimer-secondary">Proof of concept, content is subject to change</div>
        </div>

        <div class="mobile-disclaimer">
            <i class="fa-solid fa-desktop"></i>
            <div class="mobile-disclaimer-text">Please use a desktop device for viewing this site</div>
        </div>

        <script src="/js/main.js"></script>

        <script src="/js/initWindows.js"></script>
        <script src="/js/initIcons.js"></script>
        <script src="/js/mobileDisclaimer.js"></script>

        <script src="/js/console.js"></script>
    </body>
</html>